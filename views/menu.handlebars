
<section class="container">
  <h3 class="menu-name">{{menu.name}}</h3>
  <h4>Offered: {{menu.time_offered}}</h4>
  <section class="flex-row justify-center meal-container" >
    {{#each menu.meals}}
    <section class="meal">
        <input type="hidden" value="{{name}}">
  <img src="/images/{{filename}}" alt="{{description}}">
  <div class="meal-details">
    <h3 id="name">{{name}}</h3>
    <p id="price" value="{{price}}"> Price: {{price}}</p>
    <p> {{description}}</p>
  </div>
  <button id="add-to-order">Add to Order</button>
</section>
    {{/each}}
  </section>
</section>

<script src="/js/order.js" ></script>
